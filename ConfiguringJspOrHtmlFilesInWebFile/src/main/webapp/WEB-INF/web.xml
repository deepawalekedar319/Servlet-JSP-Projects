<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>ConfiguringJspOrHtmlFilesInWebFile</display-name>
  <welcome-file-list>
    <welcome-file>responsePage</welcome-file>
  </welcome-file-list>
  <!-- Configuration of HTML File -->
  <servlet>
  		<servlet-name>html</servlet-name>
  		<jsp-file>/home.html</jsp-file>
  </servlet>
  <!-- Mapping the url -->
  <servlet-mapping>
  		<servlet-name>html</servlet-name>
  		<url-pattern>/responsePage</url-pattern>
  </servlet-mapping>  
</web-app>